{
    "compilerOptions": {
        "esModuleInterop": true,
        "sourceMap": true,
        "lib": ["ES2020", "DOM"],
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "downlevelIteration": true,
        "paths": {
            "@hooks/*": ["hooks/*"],
            "@components/*": ["components/*"],
            "@layouts/*": ["layouts/*"],
            "@pages/*": ["pages/*"],
            "@utils/*": ["utils/*"],
            "@typings/*": ["typings/*"],
            "@config/*": ["config/*"],
            "@leonSans/*": ["leonSans/*"]
        }
    }
}
